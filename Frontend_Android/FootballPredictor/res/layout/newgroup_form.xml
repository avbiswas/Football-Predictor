<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp" >
    <TextView android:id="@+id/matchday"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="3dp"
       />
	
    <EditText android:id="@+id/enter_group_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        
        android:hint="Enter Group Name"/>
    <ListView android:id="@+id/participants"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        android:paddingStart="25dp"
        android:paddingEnd="5dp"
        
        android:background="@drawable/menu_shape"
        android:hint="Participants"/>
    <Button android:id="@+id/createGroup"
	    android:layout_width="wrap_content"
        android:paddingStart="35dp"
        android:paddingEnd="35dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/button_shape"
        android:textSize="14sp"
        android:textColor="@color/profile_buttons"
        android:text="@string/createNewGroup"/>       

</LinearLayout>
