<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="2dp"
    android:background="@drawable/scorers_list_shape"
     >
    
    <TextView android:layout_width="0dp"
        android:layout_weight="4"
        android:layout_height="wrap_content"
        android:paddingStart="25dp"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        android:textSize="16sp"
        android:textColor="#EEE"
        android:id="@+id/friend_req_name"
        
        />
    
    <TextView android:layout_width="0dp"
        android:layout_weight="4"
        android:layout_height="wrap_content"
        android:paddingStart="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingEnd="0dp"
        android:textSize="12sp"
        android:textColor="#666"
        android:id="@+id/friend_req_username"
        
        />
    <LinearLayout android:id="@+id/request_status"
    android:layout_width="wrap_content"
    android:layout_gravity="end"
    android:layout_height="match_parent"
    android:orientation="horizontal" 
    android:paddingEnd="10dp"
    android:paddingStart="10dp"
    >
    
     <Button android:layout_width="wrap_content"
         style="?android:attr/buttonBarButtonStyle"
         android:layout_height="wrap_content"
         android:layout_marginStart="5dp"
         android:layout_marginEnd="5dp"
         android:background="@drawable/ic_thumb_up_white_36dp"
         android:id="@+id/accept_req"/>
     
     <Button android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         style="?android:attr/buttonBarButtonStyle"
         android:layout_marginStart="5dp"
         android:layout_marginEnd="5dp"
         android:background="@drawable/ic_thumb_down_white_36dp"
         android:id="@+id/deny_req"/>
     <TextView android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_gravity="bottom"
         android:textSize="12sp"
         android:textColor="@color/profile_buttons"
         android:paddingBottom="3dp"
         android:id="@+id/status_writer"/>
	</LinearLayout>
</LinearLayout>
