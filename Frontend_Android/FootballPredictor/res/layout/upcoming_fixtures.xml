<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/fixture_list_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="14sp"
        android:padding="10dp"
        android:textColor="@color/fixture_text"
        android:text="Select 5" />

	<ListView
	    android:id="@+id/fixture"
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="6"
	    />

	<Button android:id="@+id/submitPredictions"
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1"
	    android:layout_marginTop="10dp"
	    android:layout_marginBottom="5dp"
	    
	    android:text="SUBMIT PREDICTIONS"
	    android:padding="10dp"
	    android:textSize="18sp"
	    android:background="@drawable/group_rank_shape"
	    android:textColor="@color/profile_points"/>

</LinearLayout>
